    st.sidebar.markdown(f"Welcome, **{name}**!" if language == "English" else f"Ù…Ø±Ø­Ø¨Ø§Ù‹ØŒ **{name}**!")

    # About the Dataset button
    if st.button("About the Dataset" if language == "English" else "Ø­ÙˆÙ„ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª"):
        st.write("The dataset provides insights into common complaint types." if language == "English" else "ÙŠÙˆÙØ± Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ø±Ø¤Ù‰ Ø­ÙˆÙ„ Ø£Ù†ÙˆØ§Ø¹ Ø§Ù„Ø´ÙƒØ§ÙˆÙ‰ Ø§Ù„Ø´Ø§Ø¦Ø¹Ø©.")

    # Load models
    @st.cache_resource
    def load_models():
        lstm_model = load_model('model.h5')
        word2vec_model = Word2Vec.load("word2vec_model.bin")
        return lstm_model, word2vec_model

    # Function to insert complaints into the database
    def insert_complaint(name, email, phone, complaint_details, category):
        cursor.execute('''
            INSERT INTO complaints (name, email, phone, complaint_details, category)
            VALUES (?, ?, ?, ?, ?)
        ''', (name, email, phone, complaint_details, category))
        conn.commit()

    # Display User Inputs
    def display_inputs():
        st.markdown("### Enter Complaint Details" if language == "English" else "### Ø¥Ø¯Ø®Ø§Ù„ ØªÙØ§ØµÙŠÙ„ Ø§Ù„Ø´ÙƒÙˆÙ‰")
        name = st.text_input('Name' if language == "English" else "Ø§Ù„Ø§Ø³Ù…")
        email = st.text_input('Email' if language == "English" else "Ø§Ù„Ø¨Ø±ÙŠØ¯ Ø§Ù„Ø¥Ù„ÙƒØªØ±ÙˆÙ†ÙŠ")
        phone = st.text_input('Phone Number' if language == "English" else "Ø±Ù‚Ù… Ø§Ù„Ù‡Ø§ØªÙ")
        complaint_details = st.text_area("Complaint Details" if language == "English" else "ØªÙØ§ØµÙŠÙ„ Ø§Ù„Ø´ÙƒÙˆÙ‰")
        category = st.selectbox("Complaint Category" if language == "English" else "ØªØµÙ†ÙŠÙ Ø§Ù„Ø´ÙƒÙˆÙ‰", ["Billing Issues", "Connection Problems", "Customer Service", "Other"])
        
        return name, email, phone, complaint_details, category

    # Prediction and insertion
    def process_complaint(lstm_model, word2vec_model, complaint_details):
        doc = spacy.blank("en")(complaint_details)
        tokens = [token.lemma_.lower() for token in doc if not token.is_punct and not token.is_space]
        vectors = [word2vec_model.wv[token] for token in tokens if token in word2vec_model.wv]
        avg_vector = np.mean(vectors, axis=0) if vectors else np.zeros(word2vec_model.vector_size)
        reshaped_vector = avg_vector.reshape((1, avg_vector.shape[0], 1))
        return "Disputed" if lstm_model.predict(reshaped_vector)[0][0] > 0.5 else "Not Disputed"

    # Dashboard for Admin
    def admin_dashboard():
        st.markdown("## Admin Dashboard" if language == "English" else "## Ù„ÙˆØ­Ø© Ø§Ù„ØªØ­ÙƒÙ…")
        complaints = pd.read_sql_query("SELECT * FROM complaints", conn)
        st.write(complaints)

        # Show analytics on complaints
        st.write("### Complaint Statistics" if language == "English" else "### Ø¥Ø­ØµØ§Ø¦ÙŠØ§Øª Ø§Ù„Ø´ÙƒØ§ÙˆÙ‰")
        fig, ax = plt.subplots()
        complaints['category'].value_counts().plot(kind='bar', ax=ax, color="purple")
        plt.title("Complaint Distribution by Category")
        plt.ylabel("Number of Complaints")
        st.pyplot(fig)

    # Main Application Flow
    def main():
        lstm_model, word2vec_model = load_models()
        if name == "Admin":
            admin_dashboard()
        else:
            name, email, phone, complaint_details, category = display_inputs()
            if st.button("Submit" if language == "English" else "Ø¥Ø±Ø³Ø§Ù„"):
                prediction = process_complaint(lstm_model, word2vec_model, complaint_details)
                insert_complaint(name, email, phone, complaint_details, category)
                st.success("Complaint Submitted Successfully!" if language == "English" else "ØªÙ… ØªÙ‚Ø¯ÙŠÙ… Ø§Ù„Ø´ÙƒÙˆÙ‰ Ø¨Ù†Ø¬Ø§Ø­!")
                st.write(prediction)
                
    main()

# Close database connection at end of application
conn.close()
